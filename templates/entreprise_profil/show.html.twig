{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Mon compte
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-2 bg-dark text-white">
				{% include 'partials/_sidebar.html.twig' %}
			</div>
			<div class="col-10 bg-custom-account">
				{% block content %}

					{% if app.user %}
						{% set entreprise = app.user.entrepriseProfil %}
						<div class="container mt-5">
							<h1 class="mb-4 text-center">
								Secteur d'activit√©:
								<span class="badge bg-info">{{ entreprise.activityArea }}</span>

							</h1>
							<div class="card card-text">
								<div class="card-body d-flex justify-content-between">

									<div
										class="col-md-4">
										{# <img src="{{ asset('uploads/'~ entreprise.logo ) }}" alt="Photo de profil" class="img-fluid rounded shadow-lg" style="width: 100%; height: 300px;object-fit: cover;"> #}
										{% if 'https://api.dicebear.com/' in entreprise.logo %}
											<img src="{{ entreprise.logo }}" alt="Photo de profil" class="img-fluid rounded shadow-lg" style="width: 100%; height: 300px;object-fit: cover;">
										{% else %}
											<img src="{{ asset('uploads/'~ entreprise.logo ) }}" alt="Photo de profil" class="img-fluid rounded shadow-lg" style="width: 100%; height: 300px;object-fit: cover;">
										{% endif %}
									</div>

									<div class="col-md-4">
										<h4 class="card-title">
											{{ entreprise.name }}
										</h4>
										<details>
											<summary>Adresse:</summary>
											{{ entreprise.address }}
											{{ entreprise.city }}
											{{ entreprise.zipCode }}
											{{ entreprise.country }}
										</details>
										<strong>Tel:</strong>
										{{ entreprise.phoneNumber }}
										<br>
										<strong>Site web:</strong>
										<a href="{{ entreprise.website }}" target="_blank" class="text-decoration-none">Notre site web</a>
										<br>
									</div>

								</div>
								<div class="card-body">
									<strong class="fs-5">A propos de nous :</strong>
									<p class="card-text mt-3">{{ entreprise.description|raw }}</p>
									<div class="d-grid gap-2 d-md-flex justify-content-md-end">
										<a href="{{path('app_entreprise_profil_edit',{'id':entreprise.id})}}" class="btn btn-warning mt-3">
											<i class="bi bi-pencil-square"></i>
										</a>
										<a href="{{path('app_entreprise_profil_delete',{'id':entreprise.id})}}" class="btn btn-danger mt-3">
											<i class="bi bi-trash"></i>
										</a>
									</div>
								</div>
							</div>
						{% endif %}
					{% endblock %}
				</div>
			</p>
		</div>
	{% endblock %}
