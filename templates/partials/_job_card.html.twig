<div class="col mb-4">
<a href="" class="text-decoration-none text-dark">

		<div class="card h-100">
			<div class="card-body">
				<div class="d-flex justify-content-between mb-2">
					<img src="{{asset('uploads/'~ offer.entreprise.logo)}}" class="card-img-top" alt="Logo de l'entreprise" style="height: 50px; width: 50px; object-fit: cover;border-radius: 50%;"/>
					<p class="card-subtitle text-end ms-2">
						<i class="bi bi-geo-alt-fill"></i>
						{{offer.location}}
					</p>
				</div>
				<h5 class="card-title">{{offer.title}}</h5>
				<div class="d-flex justify-content-between">
					<p class="card-text">{{offer.entreprise.name|upper}}</p>

					<p class="card-text">{{offer.contractType}}</p>

					<p class="card-text">{{offer.salary}}
						€</p>

				</div>
				<p class="card-text">{{offer.shortDescription}}</p>

				<div class="mb-1">
					<p class="card-text">Compétences</p>
					<ul class="list-inline">
						{% for tag in offer.tags %}
							<li class="list-inline-item">
								<span class="badge bg-primary">{{tag.name}}</span>
							</li>
						{% endfor %}
					</ul>
				</div>
				<p class="card-text">
					<small class="text-muted">
						<i class="bi bi-clock"></i>
						{{offer.createdAt|ago(locale='fr')}}

					</small>
				</p>
			</div>
			<div class="card-footer text-center mt-auto">
				<a href="#" class="btn btn-primary">
					<i class="bi bi-eye"></i>
					Postuler
				</a>
			</div>
		</div>
	</a>
</div>
